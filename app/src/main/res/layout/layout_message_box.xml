<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lmb_banner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#2196F3"
        android:gravity="center_vertical|center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_info" />

    <TextView
        android:id="@+id/lmb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lmb_banner"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:text="PERSONAL INFORMATION REQUESTED"
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lmb_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lmb_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:text="Server requested your personal information.\nDo you want to send your personal data to server?"
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <Button
        android:id="@+id/lmb_btn_negative"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/lmb_msg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_flat_red"
        android:gravity="center_vertical|center_horizontal"
        android:text="Go Back"
        android:textColor="#ffffffff" />

    <Button
        android:id="@+id/lmb_btn_positive"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/lmb_msg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_flat_red"
        android:gravity="center_horizontal|center_vertical"
        android:text="Send"
        android:textColor="#ffffffff" />


</RelativeLayout>